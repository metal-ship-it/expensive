    <script>
        // 初始化圖示
        lucide.createIcons();

        // 模擬價格運算 (實際應串接 API)
        async function updatePrice() {
            // 這裡模擬從 API 獲取的國際銀價 (USD/oz)
            const mockSpotPrice = 24.52; 
            const usdToTwd = 32.5; // 假設匯率
            const premium = 150;   // 每盎司利潤/工費

            const spotTwd = mockSpotPrice * usdToTwd;
            
            document.getElementById('spot-price').innerText = `$${mockSpotPrice}`;
            document.getElementById('sell-price').innerText = `NT$ ${Math.round(spotTwd + premium)}`;
            document.getElementById('buy-price').innerText = `NT$ ${Math.round(spotTwd - 50)}`;
        }

        function addToInquiry(itemName) {
            document.getElementById('inquiry-item').value = itemName;
            document.getElementById('inquiry').scrollIntoView({ behavior: 'smooth' });
        }

        updatePrice();
    </script>
